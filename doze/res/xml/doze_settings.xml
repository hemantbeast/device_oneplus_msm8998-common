<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aicpextras="http://schemas.android.com/apk/res-auto">

    <com.aicp.gear.preference.SystemSettingSwitchPreference
        android:key="pulse_ambient_light"
        android:defaultValue="false"
        android:title="@string/pulse_ambient_light_title" />

    <com.aicp.gear.preference.SystemSettingSwitchPreference
        android:key="pulse_ambient_light_auto_color"
        android:defaultValue="false"
        android:title="@string/pulse_ambient_light_auto_color_title"
        android:summary="@string/pulse_ambient_light_auto_color_summary"
        android:dependency="pulse_ambient_light" />

    <com.aicp.gear.preference.SystemSettingColorPickerPreference
        android:key="pulse_ambient_light_color"
        android:title="@string/pulse_ambient_light_color_title"
        android:defaultValue="0xFF3980FF"
        android:dependency="pulse_ambient_light" />

    <com.aicp.gear.preference.SystemSettingSeekBarPreference
        android:key="pulse_ambient_light_duration"
        android:title="@string/pulse_ambient_light_duration_title"
        android:max="10"
        android:min="1"
        aicpextras:unitsLeft=""
        aicpextras:unitsRight="sec"
        android:defaultValue="2"
        android:dependency="pulse_ambient_light" />

    <PreferenceCategory
        android:key="double_tap"
        android:title="@string/double_tap_title" >

        <com.aicp.gear.preference.SecureSettingSwitchPreference
            android:key="doze_pulse_on_double_tap"
            android:defaultValue="false"
            android:title="@string/doze_double_tap_title"
            android:summary="@string/doze_double_tap_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="tilt_sensor"
        android:title="@string/tilt_sensor_title">

        <com.aicp.gear.preference.SecureSettingSwitchPreference
            android:key="doze_tilt_gesture"
            android:defaultValue="false"
            android:title="@string/pick_up_gesture_title"
            android:summary="@string/pick_up_gesture_summary"
            android:icon="@drawable/ic_pickup" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="proximity_sensor"
        android:title="@string/proximity_sensor_title">

        <com.aicp.gear.preference.SecureSettingSwitchPreference
            android:key="doze_handwave_gesture"
            android:defaultValue="false"
            android:title="@string/hand_wave_gesture_title"
            android:summary="@string/hand_wave_gesture_summary"
            android:icon="@drawable/ic_hand"/>

        <com.aicp.gear.preference.SecureSettingSwitchPreference
            android:key="doze_pocket_gesture"
            android:defaultValue="false"
            android:title="@string/pocket_gesture_title"
            android:summary="@string/pocket_gesture_summary"
            android:icon="@drawable/ic_pocket" />

    </PreferenceCategory>

</PreferenceScreen>
